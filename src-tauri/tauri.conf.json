{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DotMatrix-FilePrinter",
  "version": "1.0.0",
  "identifier": "com.hyperpolymath.dotmatrix-fileprinter",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DotMatrix-FilePrinter",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self'"
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "gforth",
          "cmd": "gforth",
          "args": true
        },
        {
          "name": "hexdump",
          "cmd": "hexdump",
          "args": ["-C", { "validator": "\\S+" }]
        }
      ]
    },
    "fs": {
      "scope": {
        "allow": ["$APPDATA/**", "$RESOURCE/**", "kernel/**", "dist/**"],
        "deny": []
      }
    },
    "dialog": {
      "open": true,
      "save": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["kernel/*"],
    "category": "DeveloperTool",
    "shortDescription": "Deterministic byte-level filesystem manipulation",
    "longDescription": "A neurosymbolic approach to filesystem manipulation using a Forth kernel as the physical print head for deterministic byte injection.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["gforth"]
      },
      "rpm": {
        "depends": ["gforth"]
      }
    }
  }
}
